<ContentPage
    x:Class="Layouts.ResponsiveGrid"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    >
   
    <Grid BackgroundColor="Gray" RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>    
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <BoxView BackgroundColor="Yellow" Grid.Row="0"/>
        <BoxView BackgroundColor="LightBlue" Grid.Row="1"/>
        <BoxView WidthRequest="80" HeightRequest="80" 
                 HorizontalOptions="Center" VerticalOptions="End" Grid.Row="0" 
                 Color="Red" CornerRadius="40"
                 TranslationY="40"/>
    </Grid>

    
    
    

